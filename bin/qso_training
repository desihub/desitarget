#!/usr/bin/env python


import os, sys
import numpy as np

from desitarget.train.train_mva_decals import train_mva_decals

from argparse import ArgumentParser
ap = ArgumentParser()
ap.add_argument('--step',choices={'test','train','extract_myRF'},help="Training or test of qso TS algorithm")
ap.add_argument('--debug', action='store_true')

ns = ap.parse_args()

train_mva_decals(ns.step,ns.debug)



